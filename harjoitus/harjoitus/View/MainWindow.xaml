<Window x:Class="harjoitus.View.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
      <Canvas>
            <Button x:Name="button" Canvas.Left="10" Canvas.Top="10" Content="Button" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="134" Click="button_Click"/>
            <Button Name="aButton" Click="OnImageButtonClick" Canvas.Left="150" Canvas.Top="10" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Cursor="Hand">
            <Image Source="{Binding esine1.Image, Mode=OneWay}" Width="232" Height="128"></Image>
        </Button>
      </Canvas>
    </Grid>
</Window>
