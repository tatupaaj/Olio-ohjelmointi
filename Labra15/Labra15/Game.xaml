<Window x:Class="Labra15.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labra15"
        mc:Ignorable="d"
        Title="Game" Height="422" Width="642" ResizeMode="NoResize">
    <Grid Background="Black">
        <Canvas Name="paintCanvas" Background="Black" HorizontalAlignment="Stretch" MaxWidth="642" MaxHeight="422">
            <TextBlock x:Name="txtMessage" FontFamily="Tahoma" FontSize="30" Foreground="Yellow" Canvas.Left="10" Canvas.Top="10" Text="Let's play!"/>
        </Canvas>
    </Grid>
</Window>
